auto lo
iface lo inet loopback

# Connected USB adapter port 1
auto eth1
iface eth0 inet static
  address 192.168.188.1
  netmask 255.255.255.0
  
# Connected USB adapter port 2
auto eth2
iface eth2 inet static
  address 192.168.188.2
  netmask 255.255.255.0

# Build in ethernet port, connected to the Internet
auto eth0
iface eth0 inet dhcp 
